{
  "name": "@learn-react/getting-started",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "dependencies": {
    "remarkable": "^1.7.1"
  },
  "devDependencies": {
    "@types/remarkable": "^1.7.4"
  },
  "scripts": {
    "reset": "rm -rf dist/; mkdir -p dist/assets/;",
    "copy": "cp -r ./public/. ./dist/",
    "type-check": "tsc --noEmit",
    "compile": "node ./bin/build.js",
    "serve": "node ./bin/serve.js",
    "start": "yarn reset; yarn copy; run-p \"compile\" \"serve\" \"type-check --watch\"",
    "build": "yarn reset; yarn copy; webpack --mode production"
  }
}
