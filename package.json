    "typedoc-theme-hierarchy": "3.0.2",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "yargs": "17.6.2"
  },
  "dependencies": {
    "@linaria/core": "3.0.0-beta.22",
    "constate": "3.3.2",
