    "react-dom": "18.2.0",
    "react-router-dom": "6.6.2",
    "swr": "2.0.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "cspell",
      "prettier -c -w",
      "eslint -c .eslintrc.cjs --fix",
      "stylelint --cache --fix"
    ]
  }
