    "@linaria/stylelint": "3.0.0-beta.23",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/qs": "6.9.7",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
