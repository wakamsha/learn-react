{
  "name": "learn-react",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/learn-react.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "catalog": "  yarn workspace @learn-react/catalog",
    "esnext": "   yarn workspace @learn-react/esnext",
    "icon": "     yarn workspace @learn-react/icon",
    "mobx": "     yarn workspace @learn-react/mobx",
    "routing": "  yarn workspace @learn-react/routing",
    "statement": "yarn workspace @learn-react/statement",
    "try": "      yarn workspace @learn-react/try",
    "lint": "yarn eslint -c .eslintrc.js packages/**/*.{ts,tsx}",
    "format": "yarn prettier -c -w packages/**/*.{ts,tsx}; yarn eslint -c .eslintrc.js --fix packages/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@types/highlight.js": "10.1.0",
    "@types/node": "15.3.1",
    "@types/qs": "6.9.7",
    "@types/ramda": "0.27.44",
    "@types/react": "17.0.17",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.1.8",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "cheerio": "1.0.0-rc.10",
    "chokidar": "3.5.2",
    "cspell": "5.6.6",
    "ejs": "3.1.6",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "glob": "7.1.7",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recess-order": "2.4.0",
    "stylelint-config-recommended": "5.0.0",
    "svgo": "2.3.1",
    "ts-xor": "1.0.8",
    "typescript": "4.3.5",
    "vite": "2.4.4",
    "yargs": "17.1.0"
  },
  "dependencies": {
    "@emotion/css": "11.1.3",
    "constate": "3.3.0",
    "csx": "10.0.2",
    "date-fns": "2.23.0",
    "highlight.js": "11.2.0",
    "mobx": "6.3.2",
    "mobx-react": "7.2.0",
    "pdfjs-dist": "2.9.359",
    "qs": "6.10.1",
    "ramda": "0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "cspell",
      "prettier -c -w",
      "eslint -c .eslintrc.js --fix",
      "stylelint -s css-in-js --cache --fix"
    ]
  }
}
