  "type": "module",
  "engines": {
    "node": "18.16.1",
    "pnpm": "8.6.2",
    "npm": "please use pnpm instead"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "postinstall": "husky install",
    "prepare": "pnpm builder build; pnpm icon build",
    "builder": "  pnpm -F '@learn-react/builder'",
    "catalog": "  pnpm -F '@learn-react/catalog'",
    "core": "     pnpm -F '@learn-react/core'",
    "doc": "      pnpm -F '@learn-react/doc'",
    "esnext": "   pnpm -F '@learn-react/esnext'",
    "icon": "     pnpm -F '@learn-react/icon'",
    "routing": "  pnpm -F '@learn-react/routing'",
    "statement": "pnpm -F '@learn-react/statement'",
    "try": "      pnpm -F '@learn-react/try'",
    "lint": "  prettier -c './**/*.{js,cjs,ts,tsx,md}';    eslint './**/*.{js,cjs,ts,tsx}';       stylelint './**/*.{ts,tsx}'",
    "format": "prettier -c './**/*.{js,cjs,ts,tsx,md}' -w; eslint './**/*.{js,cjs,ts,tsx}' --fix; stylelint './**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "cspell": "6.31.1",
    "eslint": "8.42.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "postcss": "8.4.24",
    "postcss-syntax": "0.36.2",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.2",
    "stylelint": "15.6.3",
    "stylelint-config-recess-order": "4.0.0",
    "stylelint-config-recommended": "12.0.0",
    "stylelint-config-standard": "33.0.0",
    "typescript": "5.1.3"
