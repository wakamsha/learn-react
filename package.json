{
  "name": "learn-react",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/learn-react.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "18.15.0",
    "pnpm": "7.30.1",
    "npm": "please use pnpm instead"
  },
  "packageManager": "pnpm@7.30.1",
  "scripts": {
    "postinstall": "husky install",
    "setup": "pnpm builder build; pnpm icon build",
    "builder": "  pnpm -F \"@learn-react/builder\"",
    "catalog": "  pnpm -F \"@learn-react/catalog\"",
    "core": "     pnpm -F \"@learn-react/core\"",
    "doc": "      pnpm -F \"@learn-react/doc\"",
    "esnext": "   pnpm -F \"@learn-react/esnext\"",
    "icon": "     pnpm -F \"@learn-react/icon\"",
    "routing": "  pnpm -F \"@learn-react/routing\"",
    "statement": "pnpm -F \"@learn-react/statement\"",
    "try": "      pnpm -F \"@learn-react/try\"",
    "lint": "  prettier -c    {apps,packages}/**/*.{ts,tsx}; eslint -c .eslintrc.cjs {apps,packages}/**/*.{ts,tsx};       stylelint {apps,packages}/**/*.{ts,tsx}",
    "format": "prettier -c -w {apps,packages}/**/*.{ts,tsx}; eslint -c .eslintrc.cjs {apps,packages}/**/*.{ts,tsx} --fix; stylelint {apps,packages}/**/*.{ts,tsx} --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "cspell": "6.30.2",
    "eslint": "8.36.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.1.4",
    "postcss": "8.4.21",
    "postcss-syntax": "0.36.2",
    "prettier": "2.8.6",
    "prettier-plugin-organize-imports": "3.2.2",
    "stylelint": "15.3.0",
    "stylelint-config-recess-order": "4.0.0",
    "stylelint-config-recommended": "11.0.0",
    "stylelint-config-standard": "31.0.0",
    "typescript": "5.0.2"
  },
  "lint-staged": {
    "{apps,packages}/**/src/**/*.{ts,tsx}": [
      "cspell",
      "prettier -c",
      "eslint -c .eslintrc.cjs",
      "stylelint --cache"
    ]
  }
}
