{
  "name": "react-study",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/react-study.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
