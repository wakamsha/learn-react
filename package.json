  "engines": {
    "node": "18.14.2",
    "npm": "please_use_yarn_instead"
  },
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "catalog": "  yarn workspace @learn-react/catalog",
    "core": "     yarn workspace @learn-react/core",
    "doc": "      yarn workspace @learn-react/doc",
    "esnext": "   yarn workspace @learn-react/esnext",
    "icon": "     yarn workspace @learn-react/icon",
    "routing": "  yarn workspace @learn-react/routing",
    "statement": "yarn workspace @learn-react/statement",
    "lint": "  prettier -c    packages/**/*.{ts,tsx}; eslint -c .eslintrc.cjs packages/**/*.{ts,tsx};       stylelint packages/**/*.{ts,tsx}",
    "format": "prettier -c -w packages/**/*.{ts,tsx}; eslint -c .eslintrc.cjs packages/**/*.{ts,tsx} --fix; stylelint packages/**/*.{ts,tsx} --fix"
  },
  "devDependencies": {
