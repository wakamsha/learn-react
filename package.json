{
  "name": "learn-react",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/learn-react.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.18.0",
    "pnpm": "9.12.2",
    "npm": "please use pnpm instead"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "prepare": "husky",
    "postinstall": "pnpm builder build; pnpm icon build",
    "builder": "  pnpm -F '@learn-react/builder'",
    "catalog": "  pnpm -F '@learn-react/catalog'",
    "core": "     pnpm -F '@learn-react/core'",
    "doc": "      pnpm -F '@learn-react/doc'",
    "esnext": "   pnpm -F '@learn-react/esnext'",
    "icon": "     pnpm -F '@learn-react/icon'",
    "routing": "  pnpm -F '@learn-react/routing'",
    "statement": "pnpm -F '@learn-react/statement'",
    "try": "      pnpm -F '@learn-react/try'",
    "lint": "  prettier -c './**/*.{js,cjs,ts,tsx,md}';    eslint './**/*.{js,cjs,ts,tsx}';       stylelint './**/*.{ts,tsx}'",
    "format": "prettier -c './**/*.{js,cjs,ts,tsx,md}' -w; eslint './**/*.{js,cjs,ts,tsx}' --fix; stylelint './**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@wakamsha/eslint-config": "4.0.0",
    "confusing-browser-globals": "1.0.11",
    "cspell": "8.15.4",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "postcss": "8.4.47",
    "postcss-syntax": "0.36.2",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "stylelint": "16.10.0",
    "stylelint-config-recess-order": "5.1.1",
    "stylelint-config-recommended": "14.0.1",
    "stylelint-config-standard": "36.0.1",
    "typescript": "5.6.3"
  }
}
