{
  "name": "learn-react",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/learn-react.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24.13.0",
    "pnpm": "10.28.1",
    "npm": "please use pnpm instead"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "prepare": "lefthook install",
    "postinstall": "pnpm builder build; pnpm icon build",
    "builder": "  pnpm -F '@learn-react/builder'",
    "catalog": "  pnpm -F '@learn-react/catalog'",
    "core": "     pnpm -F '@learn-react/core'",
    "doc": "      pnpm -F '@learn-react/doc'",
    "esnext": "   pnpm -F '@learn-react/esnext'",
    "icon": "     pnpm -F '@learn-react/icon'",
    "rr-lib": "   pnpm -F '@learn-react/react-router-lib'",
    "rr-spa": "   pnpm -F '@learn-react/react-router-spa'",
    "rr-ssr": "   pnpm -F '@learn-react/react-router-ssr'",
    "routing": "  pnpm -F '@learn-react/routing'",
    "statement": "pnpm -F '@learn-react/statement'",
    "try": "      pnpm -F '@learn-react/try'",
    "linter": "   pnpm -F '@learn-react/linter'",
    "format": "prettier -c './**/*.{js,cjs,ts,tsx,md}' -w"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@wakamsha/stylelint-config": "4.0.5",
    "cspell": "9.6.0",
    "lefthook": "2.0.15",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "typescript": "5.9.3"
  }
}
