    "babel-plugin-module-resolver": "5.0.0",
    "cheerio": "1.0.0-rc.12",
    "chokidar": "3.5.3",
    "cspell": "6.27.0",
    "eslint": "8.35.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.6.0",
